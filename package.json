{
  "name": "chunpo",
  "description": "블루닷 춘포(Chunpo) 테마",
  "version": "0.0.3",
  "engines": {
    "ghost": ">=4.0.0"
  },
  "keywords": [
    "ghost-theme"
  ],
  "scripts": {
    "postinstall": "bower install"
  },
  "devDependencies": {
    "@primer/css": "^15.2.0",
    "clipboard": "^2.0.8",
    "concat": "^3.0.0",
    "evil-icons": "^1.10.1",
    "fs": "0.0.2",
    "gulp-autoprefixer": "^4.1.0",
    "gulp-clean-css": "^3.10.0",
    "gulp-concat": "^2.6.0",
    "gulp-jshint": "^2.1.0",
    "gulp-plumber": "^1.2.1",
    "gulp-rename": "^1.4.0",
    "gulp-replace": "^0.6.1",
    "gulp-size": "^3.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-util": "^3.0.7",
    "jshint": "^2.12.0",
    "jshint-stylish": "^2.2.0",
    "lazysizes": "^5.3.2",
    "lunr": "^0.7.2",
    "lunr-languages": "^1.4.0",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.23.0",
    "run-sequence": "^2.2.1",
    "sass-mq": "^5.0.1",
    "dart-sass": "^1.25.0",
    "gulp": "^4.0.2",
    "gulp-rtlcss": "^1.4.2",
    "gulp-sass": "^5.0.0",
    "gulp-zip": "^4.2.0",
    "node-sass": "^6.0.1",
    "sass": "^1.35.1"
  },
  "author": {
    "name": "Mediasphere",
    "email": "admin@mediasphere.kr",
    "url": "https://mediasphere.kr/"
  },
  "config": {
    "custom": {
      "tag_slugs_for_home_sections": {
        "group": "homepage",
        "type": "text",
        "title": "홈 태그 목록(상)",
        "description": "홈에 노출 시킬 태그의 슬러그(slug)를 따옴표(,)로 구분하여 입력하세요."
      },
      "tag_slugs_for_home_sections_2": {
        "group": "homepage",
        "type": "text",
        "title": "홈 태그 목록(하)",
        "description": "홈에 노출 시킬 태그의 슬러그(slug)를 따옴표(,)로 구분하여 입력하세요."
      },
      "hero_title": {
        "group": "homepage",
        "type": "text",
        "title": "히어로 제목",
        "description": "히어로 제목을 입력하세요."
      },
      "hero_description": {
        "group": "homepage",
        "type": "text",
        "title": "히어로 설명",
        "description": "히어로 설명을 입력하세요."
      },
      "subscription_title" : {
        "group": "subscription",
        "type": "text",
        "title": "구독 폼 제목",
        "default": ""
      },
      "posts_widget_active": {
        "group": "homepage",
        "type": "select",
        "options": [
          "On",
          "Off"
        ],
        "default": "On",
        "title": "포스트 위젯 활성화",
        "description": "홈페이지의 포스트 위젯을 활성화 합니다."
      },
      "posts_widget_title": {
        "group": "homepage",
        "type": "text",
        "title": "포스트 위젯 제목",
        "description": "포스트 위젯 제목을 입력하세요."
      },
      "posts_widget_order": {
        "group": "homepage",
        "type": "select",
        "options": [
          "최신순",
          "인기순"
        ],
        "default": "최신순",
        "title": "포스트 위젯 정렬 방법",
        "description": ""
      },
      "shop_section_title": {
        "group": "homepage",
        "type": "text",
        "title": "숍 섹션 제목",
        "description": ""
      },
      "shop_section_active_home": {
        "group": "homepage",
        "type": "select",
        "options": [
          "On",
          "Off"
        ],
        "default": "On",
        "title": "홈페이지 숍 섹션 활성화",
        "description": ""
      },
      "shop_section_active_post": {
        "group": "post",
        "type": "select",
        "options": [
          "On",
          "Off"
        ],
        "default": "On",
        "title": "포스트 내 숍 섹션 활성화",
        "description": ""
      }
    },
    "posts_per_page": 12
  }
}
